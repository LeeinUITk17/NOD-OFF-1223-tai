<section class="content">
    <div class="container-fluid">
    <div class="row">
    <div class="col-12">
    
    <div class="invoice p-3 mb-3">
    
    <div class="row">
    <div class="col-12">
    <h4>
    <i class="fas fa-globe"></i> One piece Store
    <small class="float-right"><%= data.createdAt.toISOString().split('T')[0] %></small>
    </h4>
    </div>
    
    </div>
    
    <div class="row invoice-info">
    <div class="col-sm-4 invoice-col">
    From
    <address>
    <strong>One Piece Store</strong><br>
    <p><%= listsetting[0].address%></p>
    <p>Email: <%= listsetting[0].email%></p>
    </address>
    </div>
    
    <div class="col-sm-4 invoice-col">
    <address>
    <strong>To: <%= data.receiver[0].name%></strong>
    <p><%= data.receiver[0].address%></p>
    <p>Province: <%= address.name%></p>
    <p>Phone: <%= data.receiver[0].phone%></p>
   <p> Email: <%= data.receiver[0].mail%></p>
    </address>
    </div>
    
    <div class="col-sm-4 invoice-col">
    <b>Invoice: <%= data.code%></b>
    <br>
    <b>Coupon: <%= data.coupon%></b>
    <br>
    <b>Note: <%= data.receiver[0].note%></b>
    </div>
    
    </div>
    
    
    <div class="row">
    <div class="col-12 table-responsive">
    <table class="table table-striped">
    <thead>
    <tr>
    <th>Quantity</th>
    <th>Product</th>
    <th>Image</th>
    <th>Description</th>
    <th>Subtotal</th>
    </tr>
    </thead>
    <tbody>
        <% for (let i = 0; i < data.list.length; i++) { %>
            <% if (products[i].id===data.list[i].id) { %> 
                <tr>
                    <td><%= data.list[i].quantity %></td>
                    <td><%= products[i].name %></td>
                    <td><img src="/<%= products[i].avatar %>" alt="Avatar"  class="rounded-thumbnail" style="width: 50px;"></td>
                    <td><%= products[i].description %></td>
                    <td>$<%= data.list[i].price %></td>
                </tr>
            <% } %>
        <% } %>
    </tbody>
    </table>
    </div>
    
    </div>
    
    <div class="row">
    
    <div class="col-6">
    <!-- <p class="lead">Amount Due 2/22/2014</p> -->
    <div class="table-responsive">
    <table class="table">
    <tbody><tr>
    <th style="width:50%">Subtotal:</th>
    <%
let subtotal = 0;
data.list.forEach((item) => {
  subtotal += (item.price * item.quantity);
});
%>
<td>$<%= subtotal %></td>

    </tr>
    <tr>
    <th>Coupon charging:</th>
    <td>- $<%= subtotal+address.charging-data.total%></td>
    </tr>
    <tr>
    <th>Shipping: </th>
    <td>+ $<%= address.charging%></td>
    </tr>
    <tr>
    <th>Total:</th>
    <td>$<%= data.total%></td>
    </tr>
    </tbody></table>
    </div>
    </div>
    
    </div>
    </div>
    
    </div>
    </div>
    </div>
    </section>
    