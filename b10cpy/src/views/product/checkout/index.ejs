

<div class="untree_co-section">
    <div class="container">
      <div class="row mb-5">
        <div class="col-md-12">
          <div class="border p-4 rounded" role="alert">
            Returning customer? <a href="#">Click here</a> to login
          </div>
        </div>
      </div>
      <div class="row">
      <form action="" method="post">
        <div class="col-md-6 mb-5 mb-md-0">
          <h2 class="h3 mb-3 text-black">Billing Details</h2>
          <div class="p-3 p-lg-5 border bg-white">
            <div class="form-group">
              <label for="c_country" class="text-black">Province <span class="text-danger">*</span></label>
              <select id="c_country" class="form-control">
                <option value="1">Select a country</option>    
                <option value="2">bangladesh</option>    
                <option value="3">Algeria</option>    
                <option value="4">Afghanistan</option>    
                <option value="5">Ghana</option>    
                <option value="6">Albania</option>    
                <option value="7">Bahrain</option>    
                <option value="8">Colombia</option>    
                <option value="9">Dominican Republic</option>    
              </select>
            </div>
            <div class="form-group row">
              <div class="col-md-6">
                <label for="receiver.receiverSchema.name" class="text-black">Name <span class="text-danger">*</span></label>
                <input type="text" class="form-control" id="receiver.receiverSchema.name" name="receiver.receiverSchema.name">
              </div>
            </div>

            <div class="form-group row">
              <div class="col-md-12">
                <label for="receiver.receiverSchema.address" class="text-black">Address <span class="text-danger">*</span></label>
                <input type="text" class="form-control" id="receiver.receiverSchema.address" name="receiver.receiverSchema.address" placeholder="Street address">
              </div>
            </div>

            <div class="form-group row mb-5">
              <div class="col-md-6">
                <label for="receiver.receiverSchema.mail" class="text-black">Email Address <span class="text-danger">*</span></label>
                <input type="text" class="form-control" id="receiver.receiverSchema.mail" name="receiver.receiverSchema.mail">
              </div>
              <div class="col-md-6">
                <label for="receiver.receiverSchema.phone" class="text-black">Phone <span class="text-danger">*</span></label>
                <input type="text" class="form-control" id="receiver.receiverSchema.phone" name="receiver.receiverSchema.phone" placeholder="Phone Number">
              </div>
            </div>
            <div class="form-group">
              <label for="receiver.receiverSchema.note" class="text-black">Order Notes</label>
              <textarea name="receiver.receiverSchema.note" id="receiver.receiverSchema.note" cols="30" rows="5" class="form-control" placeholder="Write your notes here..."></textarea>
            </div>

          </div>
        </div>
        <div class="col-md-6">

          <div class="row mb-5">
            <div class="col-md-12">
              <h2 class="h3 mb-3 text-black">Coupon Code</h2>
              <div class="p-3 p-lg-5 border bg-white">

                <label for="coupon" class="text-black mb-3">Enter your coupon code if you have one</label>
                <div class="input-group w-75 couponcode-wrap">
                  <input type="text" class="form-control me-2" name="coupon" id="coupon" placeholder="Coupon Code" aria-label="Coupon Code" aria-describedby="button-addon2">
                  <div class="input-group-append">
                    <button class="btn btn-black btn-sm" type="button" id="button-addon2">Apply</button>
                  </div>
                </div>

              </div>
            </div>
          </div>

          <div class="row mb-5">
            <div class="col-md-12">
              <h2 class="h3 mb-3 text-black">Your Order</h2>
              <div class="p-3 p-lg-5 border bg-white">
                <table class="table site-block-order-table mb-5">
                  <thead>
                    <th>Product</th>
                    <th>Total</th>
                  </thead>
                  <tbody>
                    <%
                    const itemQuantities = {};
                    let subtotal = 0; 
                    
                    data.forEach((item) => {
                        const itemId = item._id.toString();
                        itemQuantities[itemId] ? itemQuantities[itemId]++ : itemQuantities[itemId] = 1;
                    });
                    
                    const renderedIds = new Set();
                    
                    data.forEach((item) => {
                        const itemId = item._id.toString();
                        if (!renderedIds.has(itemId)) {
                            renderedIds.add(itemId);
                            subtotal += item.price * (itemQuantities[itemId] || 0); 
                    %>
                    <tr>
                  <td><%= item.name %><strong class="mx-2">x</strong><%= itemQuantities[itemId] || 0 %></td>
                  <td><%= item.price%></td>
                </tr>
                                       <%
                        }
                        <input type="hidden" name="products[id][]" value="<%= item._id %>">
        <input type="hidden" name="products[quantity][]" value="<%= itemQuantities[item._id.toString()] || 0 %>">
        <input type="hidden" name="products[price][]" value="<%= item.price %>">
                    });
                    %>
                    <tr>
                      <td class="text-black font-weight-bold"><strong>Cart Subtotal</strong></td>
                      <td class="text-black">$<%= subtotal.toFixed(2) %></td>
                    </tr>
                    <tr>
                      <td class="text-black font-weight-bold"><strong>Order Total</strong></td>
                      <td class="text-black font-weight-bold"><strong>$<%= subtotal.toFixed(2) %></strong></td>
                    </tr>
                  </tbody>
                </table>
                <input type="hidden" name="total" value="<%= subtotal.toFixed(2) %>">              
                <div class="form-group">
                  <button type="submit" class="btn btn-black btn-lg py-3 btn-block" onclick="window.location='/shop/thanks'">Place Order</button>
                </div>

              </div>
            </div>
          </div>

        </div>
      </form>
      </div>
      <!-- </form> -->
    </div>
  </div>
